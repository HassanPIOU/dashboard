<div class="modal fade bs-example-modal-center" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title mt-0">Modifier mon compte</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row mt-3">
                    <div class="col-lg-6">
                        <input type="text" class="form-control" id="ville" placeholder="Nom" value="{{ auth().lastname }}">
                    </div>
                    <div class="col-lg-6">
                        <input type="text" class="form-control" id="pays" placeholder="Prénom"  value="{{ auth().firstname }}">
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-lg-6">
                        <input type="text" class="form-control" id="ville" placeholder="Téléphone"  value="{{ auth().telephone }}">
                    </div>
                    <div class="col-lg-6">
                        <input type="text" class="form-control" id="pays" placeholder="email"  value="{{ auth().email }}">
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-lg-12">
                        <input type="text" class="form-control" id="adresse" placeholder="Adresse"  value="{{ auth().adresse }}">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="updateUser_dismiss" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="updateUser" onclick="updateUser()">Modifier</button>
            </div>
        </div>
    </div>
</div>
