{% extends 'layouts/design.twig' %}

{% block body %}
    <div class="main-content">

        <div class="page-content">
            <div class="container-fluid">

                <!-- start page title -->
                <div class="row">
                    <div class="col-12">
                        <div class="page-title-box d-flex align-items-center justify-content-between">
                            <h4 class="mb-0 font-size-18">Clients</h4>

                            <div class="page-title-right">
                                <ol class="breadcrumb m-0">
                                    <li class="breadcrumb-item"><a href="javascript: void(0);">Contacts</a></li>
                                    <li class="breadcrumb-item active">Clients</li>
                                </ol>
                            </div>

                        </div>
                    </div>
                </div>
                <!-- end page title -->

                {% include('contact/addcustomer.twig') %}
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body" id="customerBox">
                                <div class="row mb-2">
                                    <div class="col-sm-12">
                                        <div class="text-sm-right">
                                            <button type="button" class="btn btn-success btn-rounded waves-effect waves-light mb-2 mr-2" data-toggle="modal" data-target=".bs-example-modal-center"><i class="mdi mdi-plus mr-1"></i> Nouveau</button>
                                        </div>
                                    </div><!-- end col-->
                                </div>

                                <div class="table-responsive" id="tableBox">
                                    {% if customers.count != 0 %}
                                    <table class="table table-centered table-nowrap" id="example1">
                                        <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Type</th>
                                            <th>Dénomination</th>
                                            <th>Téléphone / Email</th>
                                            <th>Adresse</th>
                                            <th>Site web</th>
                                            <th>Action</th>
                                        </tr>
                                        </thead>
                                        <tbody id="body">
                                        {% for customer in customers %}
                                        <tr>
                                            <td>
                                                <b>#</b>
                                            </td>
                                            <td>{{ customer.structure_name }}</td>
                                            <td>{{ customer.denomination }}</td>
                                            <td>
                                                <p class="mb-1">{{ customer.telephone }}</p>
                                                <p class="mb-0">{{ customer.email }}</p>
                                            </td>

                                            <td>{{ customer.address }} {{ customer.city }} - {{ customer.country }}</td>
                                            <td>{{ customer.siteweb }} <a href="{{ customer.siteweb }}" target="_blank" style="padding-left: 10px;"><i class="fas fa-eye"></i></a></td>
                                            <td>
                                                <a href="#"
         onclick="editCustomer('{{ customer.structure }}','{{ customer.denomination }}','{{ customer.email }}','{{ customer.telephone }}','{{ customer.city }}','{{ customer.country }}','{{ customer.address }}','{{ customer.siteweb }}','{{ customer.id }}')"
                                                   data-toggle="tooltip" data-placement="top" title="" data-original-title="Modifier"><i class="mdi mdi-pencil font-size-16 text-success mr-1"></i></a>
                                               <a href="#"  data-toggle="tooltip" data-placement="right" title="" data-original-title="Supprimer" onclick="delecustomer('{{ customer.id }}')"><i class="mdi mdi-trash-can font-size-16 text-danger mr-1"></i></a>
                                            </td>
                                        </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                    {% endif %}
                                </div>
                                {% if customers.count == 0 %}
                                    <div class="row justify-content-center">
                                        <div class="col-lg-10">
                                            <h4 class="mt-4 font-weight-semibold">Liste des Clients</h4>
                                            <p class="text-muted mt-3">La liste des Clients est vide</p>
                                        </div>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
                <!-- end row -->

            </div> <!-- container-fluid -->
        </div>
        <!-- End Page-content -->


    </div>
{% endblock %}