<div class="modal fade bs-example-modal-center" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
    <div class="modal-dialog ">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title mt-0">Partenaire</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-6">
                        <select name="" id="structure" class="form-control">
                            <option  disabled selected>Selectionner le type de structure</option>
                            {% for structure in structures %}
                            <option value="{{ structure.sid }}">{{ structure.structure_name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-lg-6">
                        <input type="text" class="form-control" placeholder="nom de la structure" id="denomination">
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-lg-6">
                        <input type="text" class="form-control" id="titre" placeholder="titre">
                    </div>
                    <div class="col-lg-6">
                        <input type="email" class="form-control" id="email" placeholder="email">
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-lg-12">
                        <small>Renseigner les secteurs d'activité sans mettre d'espace et séparé par un point virgule</small>
                        <textarea name="" id="secteur" cols="30" rows="3" placeholder="Secteur...." class="form-control"></textarea>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="addpartenaire_dismiss" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="addpartenaire" onclick="addpartenaire()">Ajouter</button>
            </div>
        </div>
    </div>
</div>
