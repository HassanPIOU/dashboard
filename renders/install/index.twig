<!doctype html>
<html lang="fr">
<head>

    <meta charset="utf-8" />
    <title>Install | Imperial tech Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Imperial technology dashboard" name="description" />
    <meta content="Imperial tech" name="author" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="assets/images/favicon.ico">

    <!-- Bootstrap Css -->
    <link href="assets/css/bootstrap.min.css" id="bootstrap-style" rel="stylesheet" type="text/css" />
    <!-- Icons Css -->
    <link href="assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <!-- App Css-->
    <link href="assets/css/app.min.css" id="app-style" rel="stylesheet" type="text/css" />

</head>

<body>

<div class="account-pages my-5 pt-sm-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-5" id="resultat"></div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-5">
                <div class="card overflow-hidden">
                    <div class="bg-soft-primary">
                        <div class="row">
                            <div class="col-7">
                                <div class="text-primary p-4">
                                    <h5 class="text-primary">Installation</h5>
                                </div>
                            </div>
                            <div class="col-5 align-self-end">
                                <img src="assets/images/profile-img.png" alt="" class="img-fluid">
                            </div>
                        </div>
                    </div>

                    <div class="card-body pt-0">
                        <div>
                            <a href="#">
                                <div class="avatar-md profile-user-wid mb-4">
                                            <span class="avatar-title rounded-circle bg-light">
                                                <img src="assets/images/logo.svg" alt="" class="rounded-circle" height="34">
                                            </span>
                                </div>
                            </a>
                        </div>

                      <div id="createDB">
                          <div class="form-group">
                              <label for="">Base de Donnée</label>
                              <input type="text" class="form-control" id=""  value="{{ bdd }}" readonly disabled style="background-color: #ccc;">
                          </div>
                          <div class="mt-5 mb-3">
                              <a href="javascript:;" class="btn btn-primary btn-block waves-effect waves-light" id="createDatabase" onclick="createDatabase()" >Creer la base de donnée</a>
                          </div>
                      </div>
                        <div class="p-2" id="addSqlFile"  style="display: none;">
                            <form class="form-horizontal" action="/dashboard" >
                                <div class="form-group">
                                    <label for="userpassword">Fichier .sql</label>
                                    <input type="file" class="form-control" id="">
                                </div>

                            </form>
                        </div>

                    </div>
                </div>


            </div>
        </div>
    </div>
</div>

<!-- JAVASCRIPT -->
<script src="assets/libs/jquery/jquery.min.js"></script>
