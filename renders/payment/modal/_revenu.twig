<div class="modal fade revenu-example-modal-xl"  tabindex="-1" role="dialog" aria-labelledby="myExtraLargeModalLabel"  aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title mt-0" id="myExtraLargeModalLabel">Ajout Dépot</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                  <div class="row">
                      <div class="col-lg-12">
                          <label for="amount_depot">Montant</label>
                          <input type="text" class="form-control" id="amount_depot">
                      </div>
                      <div class="col-lg-12 mt-2">
                          <label for="projet_budget">Utilisateur</label>
                          <select name="" id="user_depot" class="form-control">
                              <option selected disabled>Selectionnez l 'utilisateur</option>
                                  {% for user in users %}
                                      <option value="{{ user.id }}">{{ user.lastname }} {{ user.firstname }}</option>
                                  {% endfor %}
                          </select>
                      </div>
                      <div class="col-lg-12 mt-2">
                          <label for="">Compte de dépot</label>
                          <select class="form-control " id="account_depot" name="account_depot">
                              <option selected disabled>compte</option>
                              {% for compte in comptes %}
                                  <option value="{{ compte.id }}">{{ compte.denomination }} <small>({{ compte.numero }})</small></option>
                              {% endfor %}
                          </select>
                      </div>
                  </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="add_depot_dismiss" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-success" id="add_depot" onclick="add_depot()">valider</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>