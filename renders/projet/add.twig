{% extends 'layouts/design.twig' %}

{% block body %}
<div class="main-content">

    <div class="page-content">
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box d-flex align-items-center justify-content-between">
                        <h4 class="mb-0 font-size-18">Projet</h4>

                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Projet</a></li>
                                <li class="breadcrumb-item active">Creation</li>
                            </ol>
                        </div>

                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title mb-4">Creer un nouveau projet</h4>
                            <form>
                                <input type="hidden" value="{{ hash }}" name="hash" id="hashvalue">
                              <div class="row">
                                  <div class="form-group col-lg-6 mb-4">
                                      <label for="projectname" class="col-form-label">Nom</label>
                                      <input id="projectname" name="projectname" type="text" class="form-control" placeholder="Nom du projet...">
                                  </div>
                                  <div class="form-group col-lg-6 mb-4">
                                           <label for="projectbudget" class="col-form-label ">Budget</label>
                                          <input id="projectbudget" name="projectbudget" type="text" placeholder="Budget..." class="form-control">
                                  </div>
                              </div>
                                <div class="form-group row mb-4">
                                        <div class="col-lg-12">
                                            <label for="projectdesc" class="col-form-label">Description</label>
                                            <textarea class="form-control" id="projectdesc" rows="3" placeholder=" Description..."></textarea>
                                        </div>
                                </div>
                                <div class="form-group row mb-4">
                                    <div class="col-lg-12">
                                        <label class="col-form-label">Date</label>
                                        <div class="input-daterange input-group" data-provide="datepicker" data-date-format="dd M, yyyy" data-date-autoclose="true">
                                            <input type="text" class="form-control" placeholder="Debut" name="start" id="start" />
                                            <input type="text" class="form-control" placeholder="Deadline" name="end" id="end" />
                                        </div>
                                    </div>
                                </div>
                            </form>
                            <div class="row mb-4">
                                   <div class="col-lg-12">
                                       <label class="col-form-label ">Piece jointe</label>
                                       <form action="/projet-file-add" id="addprojetfiles" method="post" class="dropzone">
                                           <input type="hidden" value="{{ hash }}" name="hash" id="hash">
                                           <div class="fallback">
                                               <input id="projetaddfiles" name="file" type="file" multiple />
                                           </div>

                                           <div class="dz-message needsclick">
                                               <div class="mb-3">
                                                   <i class="display-4 text-muted bx bxs-cloud-upload"></i>
                                               </div>

                                               <h4>Glisser deposer</h4>
                                           </div>
                                       </form>
                                   </div>
                            </div>
                            <div class="row justify-content-end">
                                    <button type="submit" id="projetaddbtn" onclick="addprojet()" class="btn btn-primary mr-2">Ajouter</button>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <!-- end row -->

        </div> <!-- container-fluid -->
    </div>
    <!-- End Page-content -->


</div>
{% endblock %}