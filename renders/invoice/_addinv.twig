<div class="modal fade bs-example-modal-center" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title mt-0">Factures</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-12">
                        <select name="" id="invcustomer" class="form-control">
                            <option  value="0" disabled selected>Selectionner le Client</option>
                            {% for customer in customers %}
                                <option value="{{ customer.id }}">{{ customer.denomination }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-lg-12 mt-2">
                        <select name="" id="invmethod" class="form-control">
                            <option value="0" disabled selected>Methode de paiement</option>
                            {% for method in methods %}
                                <option value="{{ method.id_method }}">{{ method.name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-lg-12">
                        <select name="" id="invmodality" class="form-control">
                            <option value="0" selected disabled >Choisir la modalité de paiement</option>
                            {% for modality in modalities %}
                                <option value="{{ modality.modal_id }}">{{ modality.titre }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-lg-12 mt-2">
                        <div class="input-group">
                            <input type="date" class="form-control" id="invduedate">
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="mdi mdi-calendar"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12 mt-2">
                        <div class="input-group">
                            <input type="number" class="form-control" id="invshipping" placeholder="Livraison">
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="mdi mdi-car"></i></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mt-3">
                  <div class="col-lg-12">
                      <div class="custom-control custom-checkbox mb-3">
                          <input type="checkbox" class="custom-control-input" id="paystatus">
                          <label class="custom-control-label" for="paystatus">Facture déja payer <small>(Cocher cette case si le client a déjà payer pour le service)</small></label>
                      </div>
                  </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="addinv_dismiss" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="addinv" onclick="addinvoice()">Ajouter</button>
            </div>
        </div>
    </div>
</div>
