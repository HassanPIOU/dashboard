{% extends 'layouts/design.twig' %}

{% block body %}
    <div class="main-content">

        <div class="page-content">
            <div class="container-fluid">

                <!-- start page title -->
                <div class="row">
                    <div class="col-12">
                        <div class="page-title-box d-flex align-items-center justify-content-between">
                            <h4 class="mb-0 font-size-18">Liste des factures</h4>

                            <div class="page-title-right">
                                <ol class="breadcrumb m-0">
                                    <li class="breadcrumb-item"><a href="javascript: void(0);">Factures</a></li>
                                    <li class="breadcrumb-item active">Liste</li>
                                </ol>
                            </div>

                        </div>
                    </div>
                </div>
                <!-- end page title -->
            {{ include('invoice/_addinv.twig') }}
                <div class="row" id="invoiceBox">
                    <div class="col-lg-12 mb-4" id="newinvbox" >
                        <div class="row">
                            <div class="offset-11 col-lg-1 pull-right">
                                <button class="btn btn-rounded btn-sm btn-success" data-toggle="modal" data-target=".bs-example-modal-center">Ajouter</button>
                            </div>
                        </div>
                    </div>
                    {% for inv in invoice %}
                    <div class="col-xl-4 col-sm-6 fac" >
                        <a href="/invoice-detail-{{ inv.hash_key }}">
                            <div class="card">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-lg-4">
                                            <div class="text-lg-center">
                                                <div class="avatar-sm mr-3 mx-lg-auto mb-4 float-left float-lg-none">
                                                        <span class="avatar-title rounded-circle bg-soft-primary text-primary font-size-16">
                                                            {{ inv.denomination | slice(0,1) }}
                                                        </span>
                                                </div>
                                                <h5 class="mb-1 font-size-15 text-truncate"  data-toggle="tooltip" data-placement="top" title="MÃ©thode de paiement"> {{ inv.name }}</h5>
                                                <a href="#" class="text-muted">Methode</a>
                                            </div>
                                        </div>

                                        <div class="col-lg-8">
                                            <div>
                                                <a href="Factures-detail.html" class="d-block text-primary mb-2">Facture #{{ inv.reference }}</a>
                                                <h5 class="text-truncate mb-4 mb-lg-5">{{ inv.denomination }}</h5>
                                                <ul class="list-inline mb-0">
                                                    <li class="list-inline-item">
                                                        <h5 class="font-size-12" data-toggle="tooltip" data-placement="top" title="Deadline"><i class="bx bx-calendar mr-1 text-primary"></i>{{ inv.duedate | date('d M, Y') }}</h5>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </a>
                    </div>
                    {% endfor %}


                </div>
                {% if invoice.count == 0 %}
                    <div class="row justify-content-center mt-lg-5" id="invoiceBox2">
                        <div class="col-xl-5 col-sm-8">
                            <div class="card">
                                <div class="card-body">
                                    <div class="text-center">
                                        <div class="row justify-content-center">
                                            <div class="col-lg-10">
                                                <h4 class="mt-4 font-weight-semibold">Liste des Factures</h4>
                                                <p class="text-muted mt-3">La liste des factures est vide</p>

                                            </div>
                                        </div>

                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                {% endif %}

            </div>
        </div>
        <!-- End Page-content -->


    </div>
{% endblock %}