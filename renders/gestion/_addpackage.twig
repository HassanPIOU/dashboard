<div class="modal fade bs-example-modal-xl" id="largeModal" tabindex="-1" role="dialog" aria-labelledby="myExtraLargeModalLabel"  aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title mt-0" id="myExtraLargeModalLabel">Ajouter  Package</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-12">
                        <input type="text" class="form-control" placeholder="Titre" id="titre">
                    </div>
                    <div class="col-lg-12 mt-2">
                        <input type="text" class="form-control" placeholder="Montant" id="amount">
                    </div>
                    <div class="col-sm-12 mt-2">
                       <div class="form-group">
                           <select name=""  style="width: 100%;" id="icon" class="form-control " data-placeholder="Choisir l'icône ...">
                               <option disabled selected>Choisir l'Icône</option>
                               <option value="bx bx-walk">Walk</option>
                               <option value="bx bx-run">Run</option>
                               <option value="bx bx-cycling">Cycling</option>
                               <option value="bx bx-car">Car</option>
                           </select>
                       </div>
                    </div>
                    <div class="col-lg-12">
                        <textarea name="" id="description" cols="30" rows="4" class="form-control" placeholder="Description"  maxlength="100"></textarea>
                        <small>Max 100 Mots</small>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <input type="hidden" id="packageId">
                <button type="button" class="btn btn-secondary" id="addpackage_dismiss" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary" id="addpackage" onclick="addpackage()">valider</button>
                <button type="submit" class="btn btn-success" id="updatepackage"  style="display: none;" onclick="updatepackagesub()">valider</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>