{% extends 'layouts/design.twig' %}


{% block body %}
    <div class="main-content">

        <div class="page-content">
            <div class="container-fluid">

                <div class="row">
                    <div class="col-12">
                        <div class="page-title-box d-flex align-items-center justify-content-between">
                            <h4 class="mb-0 font-size-18">Portfolio</h4>

                            <div class="page-title-right">
                                <ol class="breadcrumb m-0">
                                    <li class="breadcrumb-item"><a href="javascript: void(0);">Portfolio</a></li>
                                    <li class="breadcrumb-item active">Portfolio</li>
                                </ol>
                            </div>

                        </div>
                    </div>
                </div>
                {% include('gestion/portfolio/modal/_addporfolio.twig') %}
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="text-sm-right">
                                            <button type="button" class="btn btn-success btn-rounded waves-effect waves-light mb-2 mr-2" data-toggle="modal" data-target=".bs-example-modal-xl"><i class="mdi mdi-plus mr-1"></i> Nouveau</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="row" id="portfolioporstfolio">
                    {% for por in portfolio %}
                        <div class="col-3">
                            <div  style="box-shadow: 0 1px 1px #ccc;border-radius: 6px;background-color: #fff;" >
                                <div>
                                    <a class="image-popup-vertical-fit" href="/uploads/portfolio/portfolio/{{ por.picture }}" >
                                        <img class="img-fluid" alt="" src="/uploads/portfolio/portfolio/{{ por.picture }}"  >
                                    </a>
                                </div>
                                <div style="padding: 10px;">
                                    <p class="mt-3"><b>Projet</b> : {{ por.projet_type }}</p>
                                    <p><b>Client</b> : {{ por.denomination }}</p>
                                    <p><b>Dur√©e</b> : {{ por.duration }}</p>
                                    {% set technology = por.technologies |split(';') %}
                                    <p><b>Technologie</b> :
                                    {% for tech in technology  %}
                                       <b class="badge badge-success ml-1">{{ tech }}</b>
                                    {% endfor %}
                                    </p>
                                    <p><b>Budget</b> : {{ por.budget }}</p>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>

            </div> <!-- container-fluid -->
        </div>
        <!-- End Page-content -->

    </div>
{% endblock %}