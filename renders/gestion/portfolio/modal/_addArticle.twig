<div class="modal fade bs-example-modal-xl" id="largeModal" tabindex="-1" role="dialog" aria-labelledby="myExtraLargeModalLabel"  aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title mt-0" id="myExtraLargeModalLabel">Ajouter Un article</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-12 mt-2">
                        <input type="text" class="form-control" id="articleTitre" placeholder="Titre">
                    </div>
                    <div class="col-lg-12 mt-2">
                        <input type="text" class="form-control" id="articleTag" placeholder="Tag">
                    </div>
                    <div class="col-lg-12 mt-2">
                        <input type="text" class="form-control" id="articleSlug" placeholder="Slug">
                    </div>
                    <div class="col-lg-12 mt-2">
                        <div class="custom-file">
                            <label class="custom-file-label" for="articlePicture">Choose file</label>
                            <input type="file" class="custom-file-input" id="articlePicture" accept="image/*">
                        </div>
                    </div>
                    <div class="col-lg-12 mt-2">
                        <textarea name="" id="articleContent" cols="30" class="form-control" rows="4" placeholder="Description...."></textarea>
                    </div>
                    <div class="col-lg-12">
                        <div class="custom-control custom-switch mt-2" dir="ltr">
                            <input type="checkbox" class="custom-control-input" id="articlePublic" value="1">
                            <label class="custom-control-label" for="articlePublic">Public</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="portfolioblogAdd_dismiss" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary" id="portfolioblogAdd" onclick="portfolioblogAdd()" >valider</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>
