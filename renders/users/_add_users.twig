<div class="modal fade bs-example-modal-center" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
    <div class="modal-dialog ">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title mt-0">Ajouter un Utilisateur</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-6">
                        <input type="text" class="form-control" id="lastname" placeholder="Nom">
                    </div>
                    <div class="col-lg-6">
                        <input type="text" class="form-control" id="firstname" placeholder="Prénom">
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-lg-6">
                        <input type="email" class="form-control" id="email" placeholder="Email">
                    </div>
                    <div class="col-lg-6">
                        <input type="text" class="form-control" id="telephone" placeholder="Téléphone">
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-lg-6">
                        <input type="text" class="form-control" id="address" placeholder="Adresse">
                    </div>
                    <div class="col-lg-6">
                        <input type="text" class="form-control" id="poste" placeholder="poste">
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-lg-12">
                        <select name="" id="profil" class="form-control">
                            <option value="0" disabled selected>Choisir le profil</option>
                            {% for profil in  profils %}
                            <option value="{{ profil.profil_id }}">{{ profil.designation }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="addUser_dismiss" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="addUser" onclick="addUsertodatabase()">Ajouter</button>
            </div>
        </div>
    </div>
</div>
