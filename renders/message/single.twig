                       <div class="col-lg-12 mt-2">
                           <input type="text" id="singleheader" class="form-control" placeholder="header ex : imperial technology">
                       </div>
               </div>
                <div class="row mt-3 mb-2">
                       <div class="col-lg-12">
                           <textarea id="singletextarea" class="form-control" maxlength="255" rows="3" placeholder="Votre message ici"></textarea>
                       </div>
                </div>
                <div class="row">
                    <div class="col-lg-4">
                        <div class="pull-right">
                            <button class="btn btn-success" id="sendsinglesms" onclick="singlesms()">Envoyer</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
